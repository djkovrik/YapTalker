<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="NewsAuthorNickname">
    <item name="android:textColor">?android:textColorPrimary</item>
    <item name="android:textStyle">bold</item>
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">1</item>
  </style>

  <style name="NewsForumTitle">
    <item name="android:textColor">?attr/colorAccentOverride</item>
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">1</item>
  </style>

  <style name="NewsTitle">
    <item name="android:textColor">?android:textColorPrimary</item>
  </style>

  <style name="NewsTopicRating">
    <item name="android:textColor">@color/colorRatingGreen</item>
    <item name="android:textStyle">bold</item>
    <item name="android:ellipsize">end</item>
    <item name="android:maxLines">1</item>
  </style>

  <style name="NewsText">
    <item name="android:textColor">?android:textColorPrimary</item>
  </style>

</resources>