<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/emoji_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/post_editor_emoji_item_margin"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal"
    tools:ignore="UseCompoundDrawables">

    <TextView
        android:id="@+id/emoji_code"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical"
        tools:text=":-)" />

    <ImageView
        android:id="@+id/emoji_image"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/post_editor_emoji_size"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical"
        tools:ignore="ContentDescription"
        tools:srcCompat="@drawable/ic_account" />

</LinearLayout>